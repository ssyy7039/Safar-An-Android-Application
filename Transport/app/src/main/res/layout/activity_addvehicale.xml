<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Addvehicale"
    android:orientation="vertical"
    android:background="@drawable/cgb">
    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Add your vehicle"
        android:textColor="#DA9812"
        android:textSize="35sp"
        android:textStyle="bold|italic"
        android:layout_weight="1"
       />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">




    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
         app:srcCompat="@drawable/index" />

            <ImageButton
                android:id="@+id/imageButton17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="@string/addvehicle"
                android:src="@drawable/ic_menu_gallery" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="278dp"
                android:layout_height="48dp"
                android:layout_marginStart="64dp"
                android:layout_marginLeft="64dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_register"
                android:backgroundTint="#da9812"
                android:contentDescription="@string/addvehicle"
                android:spinnerMode="dropdown"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView7" />


            <EditText
                android:id="@+id/editText6"
                android:layout_width="280dp"
                android:layout_height="48dp"
                android:layout_marginStart="64dp"
                android:layout_marginLeft="64dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_register"
                android:ems="10"
                android:gravity="center"
                android:hint="Enter Owner Name"
                android:inputType="textPersonName"
                android:textColor="#DA9812"
                android:textColorHint="#DA9812"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editText7"
                android:layout_width="280dp"
                android:layout_height="48dp"
                android:layout_marginStart="64dp"
                android:layout_marginLeft="64dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_register"
                android:ems="10"
                android:gravity="center"
                android:hint="Owner Contact Number"
                android:inputType="phone"
                android:textColor="#DA9812"
                android:textColorHint="#DA9812"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.014"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editText6" />

            <EditText
                android:id="@+id/editText32"
                android:layout_width="280dp"
                android:layout_height="48dp"
                android:layout_marginStart="64dp"
                android:layout_marginLeft="64dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_register"
                android:drawableLeft="@drawable/ic_location_on_black_24dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Area,City,State"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:textColor="#DA9812"
                android:textColorHint="#DA9812"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editText2" />

            <EditText
                android:id="@+id/editText31"
                android:layout_width="280dp"
                android:layout_height="48dp"
                android:layout_marginStart="64dp"
                android:layout_marginLeft="64dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_register"
                android:ems="10"
                android:gravity="center"
                android:hint="RC Book Number"
                android:inputType="textPersonName"
                android:textColor="#DA9812"
                android:textColorHint="#DA9812"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editText5" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="280dp"
                android:layout_height="48dp"
                android:layout_marginStart="64dp"
                android:layout_marginLeft="64dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_register"
                android:ems="10"
                android:gravity="center"
                android:hint=" Available Seats"
                android:inputType="phone"
                android:textColor="#DA9812"
                android:textColorHint="#DA9812"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editText31" />

            <EditText
                android:id="@+id/editText5"
                android:layout_width="280dp"
                android:layout_height="48dp"
                android:layout_marginStart="64dp"
                android:layout_marginLeft="64dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_register"
                android:ems="10"
                android:gravity="center"
                android:hint="Enter vehicle Number"
                android:inputType="textPersonName"
                android:textColor="#DA9812"
                android:textColorHint="#DA9812"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.014"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editText4" />

            <EditText
                android:id="@+id/editText4"
                android:layout_width="280dp"
                android:layout_height="48dp"
                android:layout_marginStart="64dp"
                android:layout_marginLeft="64dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_register"
                android:ems="10"
                android:gravity="center"
                android:hint="Enter vehicle Model"
                android:inputType="textPersonName"
                android:textColor="#DA9812"
                android:textColorHint="#DA9812"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.014"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editText7" />



    <Button
        android:id="@+id/button16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_register"
        android:backgroundTint="#da9812"
        android:text="ADD"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
       />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>



</LinearLayout>