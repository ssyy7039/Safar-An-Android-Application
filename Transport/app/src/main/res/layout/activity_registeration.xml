<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registeration"
    android:orientation="vertical"
    android:background="@drawable/cgb">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Register"
        android:textColor="#da9812"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_weight="2"
       />
    <EditText
        android:id="@+id/editText9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_register"
        android:drawableLeft="@drawable/ic_account_circle_black_24dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter your Name"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="#DA9812"
        android:textColorHint="#da9812"
        android:textSize="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        />
    <EditText
        android:id="@+id/editText16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_weight="1"
        android:background="@drawable/edittext_register"
        android:drawableLeft="@drawable/ic_phone_black_24dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter your contact number"
        android:inputType="phone"
        android:paddingLeft="10dp"
        android:textColor="#DA9812"
        android:textColorHint="#da9812"
        android:textSize="20dp"

       />

    <EditText
        android:id="@+id/editText11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_weight="1"
        android:background="@drawable/edittext_register"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter your email address"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:textColor="#DA9812"
        android:textColorHint="#da9812"
        android:textSize="20dp"
       />

    <EditText
        android:id="@+id/editText13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_weight="1"
        android:background="@drawable/edittext_register"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:ems="10"
        android:gravity="center"
        android:hint="set your Password"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColor="#DA9812"
        android:textColorHint="#da9812"
        android:textSize="24sp"
       />
    <EditText
        android:id="@+id/editText14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_weight="1"
        android:background="@drawable/edittext_register"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColor="#DA9812"
        android:textColorHint="#da9812"
        android:textSize="24sp"
        />

    <EditText
        android:id="@+id/editText15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_weight="2"
        android:background="@drawable/edittext_register"
        android:drawableLeft="@drawable/ic_location_on_black_24dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter your address"
        android:inputType="textMultiLine"
        android:paddingLeft="10dp"
        android:textColor="#DA9812"
        android:textColorHighlight="#DA9812"
        android:textColorHint="#da9812"
        android:textSize="20dp"
        />



    <Button
        android:id="@+id/button9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_register"
        android:backgroundTint="#da9812"
        android:text="Register"
        android:textColor="#000000"
        android:textSize="19sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
       />

</LinearLayout>