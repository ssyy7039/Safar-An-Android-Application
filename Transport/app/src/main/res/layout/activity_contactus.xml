<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Contactus"
    android:orientation="vertical"
    android:background="@drawable/cgb">
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#030303"
        android:gravity="center"
        android:text="Contact Us"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#DA9812"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_weight="1"
       />
    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/contact_edittext"
        android:text="Facebook/Dashing Shivam"
        android:textAllCaps="true"
        android:layout_marginRight="100dp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:textColor="#000000"
        android:layout_weight="1"
        android:backgroundTint="#da9812"/>
    <Button
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/contact_edittext"
        android:text="Instagram/shiva_.m_"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginLeft="100dp"
        android:layout_weight="1"
        android:layout_marginTop="70dp"
        android:backgroundTint="#da9812"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/contact_edittext"
        android:text="shivamyadav7039@gmail.com"
        android:textAllCaps="false"
        android:textColor="#000000"
       android:layout_marginRight="100dp"
        android:layout_marginTop="70dp"
        android:layout_weight="1"
        android:backgroundTint="#da9812"/>



    <EditText
        android:id="@+id/editText3"
        android:layout_width="296dp"
        android:layout_height="140dp"
        android:layout_marginTop="50dp"
        android:width="3dp"
        android:background="@drawable/edittext_register"
        android:color="#da9812"
        android:ems="10"
        android:gravity="center"
        android:hint="Write your querry...."
        android:inputType="textMultiLine"
        android:textColor="#DA9812"
        android:textColorHint="#da9812"
        android:layout_gravity="center"
        android:layout_weight="1"
        />
    <Button
        android:id="@+id/button7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/contact_edittext"
        android:text="Submit"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_weight="1"
        android:backgroundTint="#da9812"/>
</LinearLayout>